{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2020", "DOM"],
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "jest"]
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"]
}
